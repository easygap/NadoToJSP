<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Nado</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
		<param-name>OracleDriver</param-name>
		<param-value>oracle.jdbc.OracleDriver</param-value>
	</context-param>
	<context-param>
		<param-name>OracleURL</param-name>
		<param-value>c##nado</param-value>
	</context-param>
	<context-param>
		<param-name>OraclePwd</param-name>
		<param-value>nado</param-value>
	</context-param>
	<!-- Board_list(게시글 목록)에서 페이지 당 보여지는 게시글의 갯수 -->
	<context-param>
		<param-name>POSTS_PER_PAGE</param-name>
		<param-value>10</param-value>
	</context-param>
	<!-- Board_list(게시글 목록)에서 보여지는 페이지 블락에 대한 갯수 -->
	<context-param>
		<param-name>PAGES_PER_BLOCK</param-name>
		<param-value>10</param-value>
	</context-param>
	<!-- Board_write(게시글 작성)에서 파일 업로드 용량 제한 -->
	<context-param>
  		<param-name>maxPostSize</param-name>
  		<param-value>2097152</param-value>
    </context-param>
</web-app>